= javascript_include_tag "//www.google.com/jsapi"
.page-header
  .d-flex.my-2.justify-content-between.align-items-center
    .h2.mb-0
      Dashboard

    .d-flex
      %div
        %a#pages.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          All Pages
        .dropdown-menu{"aria-labelledby" => "pages"}
          = link_to "All Pages", '/', class: 'dropdown-item'
          - Subdomain.current.pages.each do |page|
            = link_to page.label, page.slug, class: 'dropdown-item'
      %div
        %a#intervals.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          November 2022
        .dropdown-menu{"aria-labelledby" => "intervals"}
          = link_to "November 2022", '/', class: 'dropdown-item'

%main{class: 'my-5'}
  .row
    .bar-chart.col.col-10
      .d-flex.justify-content-between
        .d-flex.justify-content-between
          %h5.sub-heading.mr-3
            Website Visits
          .count
            = @page_visit_events.count 
            total visits
      = column_chart @page_visit_data, colors: ["#88DAE3", "#D785E3", "#F7C85C"]
    .pie-chart 